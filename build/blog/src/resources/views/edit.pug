extends ./main.pug

block content
    form(action=`/articles/${article.title}`, method="post")
        input(type="hidden" name="_method" value="PUT")
        .form-group
            label.form-label Title
            input#title.form-control(type='text' value=`${article.title}` name='title' aria-describedby='emailHelp')
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
        .form-group
            label.form-label URL cua anh
            input#src.form-control(type='text' value=`${article.src}` name='src' aria-describedby='emailHelp')
            #emailHelp.form-text We&apos;ll never share your email with anyone else.
        .form-group
            label Content
            textarea#content.form-control(rows='3' name='content') #{article.content}
        button.btn.btn-primary(type='submit')  Update