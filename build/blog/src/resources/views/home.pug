extends ./main.pug
  
block content
    <a type="a" href="http://localhost:3000/auth/login" class="btn btn-primary">Logout</a>
    h3 Bai Cua Bang Dep Trai
        .mt-3
            .row
                each article in articles
                    .col-lg-4
                        .card(style='width: 18rem;')
                        a(href=`http://localhost:3000/articles/${article.title}`)
                            img.card-img-top(src=`${article.src}` alt='...')
                        .card-body
                            h5.card-title #{article.title}
                            p.card-text #{article.content}


                    
